<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProPresenter7WEB.DesktopApplication.Views.Controls.ProPresenterControlView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="4,0">
            <StackPanel Margin="0,0,0,4">
                <Label Content="IP Address" />
                <TextBox Width="250" HorizontalAlignment="Left" />
            </StackPanel>

            <StackPanel Margin="0,0,0,4">
                <Label Content="Port" />
                <TextBox Width="250" HorizontalAlignment="Left" />
            </StackPanel>

            <Button Content="Connect" Margin="0,8" />
        </StackPanel>
        
        <StackPanel Grid.Column="1" Margin="4,0">
            <StackPanel Margin="0,0,0,4">
                <Label Content="Playlist" />
                <ComboBox Width="250" HorizontalAlignment="Left" />
            </StackPanel>

            <StackPanel Margin="0,0,0,4">
                <Label Content="Presentation" />
                <ComboBox Width="250" HorizontalAlignment="Left" />
            </StackPanel>    
        </StackPanel>
    </Grid>
</UserControl>
